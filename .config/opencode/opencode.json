{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["oh-my-opencode@latest"],
  "model": "opencode/kimi-k2.5-free",
  "keybinds": {
    "command_list": "ctrl+k"
  },
  "permission": {
    "bash": {
      "git commit *": "ask",
      "git push *": "ask"
    }
  },
  "mcp": {
    "sentry": {
      "type": "remote",
      "url": "https://mcp.sentry.dev/mcp",
      "oauth": {},
      "enabled": true
    },
    "figma-desktop": {
      "type": "remote",
      "url": "http://127.0.0.1:3845/mcp",
      "enabled": true
    },
    "tanstack": {
      "type": "local",
      "command": ["pnpm", "dlx", "@tanstack/cli", "mcp"],
      "enabled": true
    }
  }
}
