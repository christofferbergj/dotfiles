[core]
  excludesfile = /Users/christofferbergj/.gitignore_global
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default

[user]
  name = Christoffer Berg Jensen
  email = christofferbergj@gmail.com

[init]
  defaultBranch = main

[rebase]
  autoSquash = true
  updateRefs = true

[diff]
  algorithm = histogram
  colorMoved = plain
  mnemonicPrefix = true
  renames = true

[push]
  default = current
  autoSetupRemote = true
  followTags = true

[pull]
  ff = only
  rebase = true

[fetch]
  prune = true
  pruneTags = true
  all = true

[rerere]
  enabled = true
  autoupdate = true

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
