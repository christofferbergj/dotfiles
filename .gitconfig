[core]
  excludesfile = /Users/christofferbergj/.gitignore_global
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default

[user]
  name = Christoffer Berg Jensen
  email = christofferbergj@gmail.com

[init]
  defaultBranch = main

[alias]
  yolo = !git commit -m \"$(curl -s https://whatthecommit.com/index.txt)\"

[pull]
  ff = only
  rebase = true

[rebase]
  autoSquash = true

[push]
  default = current
  autoSetupRemote = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
